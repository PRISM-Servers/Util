{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2015",
        "lib": ["ESNext"],
        "jsx": "preserve",
        "declaration": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ],
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ]
}